<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.geekymv.springcloud.mapper.UserMapper">

    <sql id="Base_Column_List" >
        id, username, password, phone, email, created, updated
    </sql>


    <select id="getByUsername" resultType="com.geekymv.springcloud.model.User">
        select
        <include refid="Base_Column_List"/>
        from tb_user t where t.username = #{username}

    </select>

</mapper>